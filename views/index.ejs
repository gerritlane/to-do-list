<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>To Do List</title>
	<link rel="stylesheet" href="css/styles.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
</head>
<body>
	<div class="header">To-Do List</div>

		<div class="list-item-container">

			<% webListItems.forEach(function(element, index) {	%>
				<form action="/delete" method="post">
					<div class="list-item">
							<div class="left">
								<input type="checkbox" class="list-item__checkbox" id="list-item_<%= index %>">
								<label for="list-item_<%= index %>" class="list-item__label"><%= element.listItemText %></label>
							</div>
							<input type="hidden" id="listItemId" name="listItemId" value="<%= element.id %>">
							<button class="delete" type="submit" name="delete">x</button>
					</div>
				</form>
			<%});%>

			<form action="/" method="post">
				<div class="list-item__input">
					<input type="text" name="listItem" id="listItem" placeholder="Add an item to the list">
					<button class="add" type="submit" name="list">+</button>
				</div>
			</form>
		</div>
	<div class="footer">web design by @<a href="https://github.com/gerritlane/">gerritlane</a></div>
</body>
</html>